{
  "manifest_version": 3,
  "name": "Bolha Terminator",
  "description": "Terminator spam oglasov na spletni strani bolha.com",
  "version": "1.1",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/logo.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "content_scripts": [
    {
        "matches": ["https://*.bolha.com/*"],
        "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["https://*.bolha.com/*"],
      "resources": ["images/bolha_logo_150.png"]
    }
  ]
}
